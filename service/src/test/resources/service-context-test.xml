<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="namedParameterJdbcTemplate" class="org.springframework.jdbc.core.namedparam.NamedParameterJdbcTemplate">
        <constructor-arg ref="dataSource"/>
    </bean>

    <bean id="patientRowMapper" class="com.epam.hospital.mapper.PatientRowMapper"/>
    <bean id="nurseRowMapper" class="com.epam.hospital.mapper.NurseRowMapper"/>


    <bean id="nurseDao" class="com.epam.hospital.dao.NurseDaoJDBCImpl">
        <constructor-arg index="0" ref="namedParameterJdbcTemplate"/>
        <constructor-arg index="1" ref="nurseRowMapper"/>
    </bean>
    <bean id="patientDao" class="com.epam.hospital.dao.PatientDaoJDBCImpl">
        <constructor-arg index="0" ref="namedParameterJdbcTemplate"/>
        <constructor-arg index="1" ref="patientRowMapper"/>
    </bean>

    <bean id="nurseService" class="com.epam.hospital.NurseServiceImpl">
        <constructor-arg name="nurseDao" ref="nurseDao"/>
    </bean>
    <bean id="patientService" class="com.epam.hospital.PatientServiceImpl">
        <constructor-arg name="patientDao" ref="patientDao"/>
    </bean>

</beans>